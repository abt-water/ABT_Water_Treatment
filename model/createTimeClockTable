PRAGMA foreign_keys = 0;

CREATE TABLE TimeClock (
    ClockID    INTEGER      PRIMARY KEY
                           AUTOINCREMENT
                           NOT NULL,
    EmployeeID INTEGER     NOT NULL,
    Time       DATETIME    NOT NULL,
    CostCode   VARCHAR (5),
    ClockIn    BOOLEAN     NOT NULL,
    Job        TEXT
);

PRAGMA foreign_keys = 1;
